<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblMensagemUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Usuario #1"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/lblMensagemTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblMensagemUsuario"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="12:00:00" />

    <TextView
        android:id="@+id/lblMensagemConteudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblMensagemUsuario"
        android:layout_marginTop="5dp"
        android:text="OlÃ¡, tudo bem?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />
</RelativeLayout>